<div class="container mt-5 mb-5 text-center">
    <h1>Community Posts</h1>
</div>

<!-- Display each published post -->


<% data.filter(post => post.status === 'published').slice(0, 15).forEach(post => { %>

    <div class="card bg-light text-dark mb-3">
        <div class="card-body">
            <div class="h1 mb-3">
                <img class="img-fluid float-end" src="<%= post.image %>" alt="Post image" style="max-width: 500px; max-height: 500px;">
            </div>
            <h3 class="card-title">
                <%= post.title %> by <%= post.user.username %>
            </h3>
            <p class="card-text">
                <%= post.body.substring(0, 100) %>...
            </p>
            <span>
                <%= post.createdAt.toDateString() %>
            </span>
            <div class="mt-2">
                <a href="/post/<%= post._id %>" class="btn btn-warning">Open post</a>
            </div>
        </div>
    </div>


<% }) %>